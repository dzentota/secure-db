{
    "name": "dzentota/secure-db",
    "description": "A secure-by-default PDO wrapper that prevents SQL injection and provides a developer-friendly API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Tatulchenkov",
            "email": "webtota@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "dzentota/respected-typedvalue": "For robust input validation and type safety"
    },
    "autoload": {
        "psr-4": {
            "SecureDb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SecureDb\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "database",
        "pdo",
        "security",
        "sql-injection",
        "prepared-statements",
        "secure"
    ]
} 